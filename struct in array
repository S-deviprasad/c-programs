#include <stdio.h>
struct student
{
 char name[50];
 int marks[5];
 float AVERAGE;
};
 void main()
{
 struct student s[3];
 for(int i=0;i<3;++i)
 {
  printf("enter student name:");
  scanf("%s",s[i].name);
  printf("enter five subject marks of student:");
  float sum=0.0;
  for(int j=0;j<5;++j)
  {
   
   scanf("%d",&s[i].marks[j]);
   sum+s[i].marks[j];
  }
    s[i].AVERAGE= sum/5.0;

 }
   int max=0;
   float maxaverage=s[0].AVERAGE;
   for(int i=1;i<3;i++)
   {
    if(s[i].AVERAGE>maxaverage);
    {
     max=i;
     maxaverage=s[i].AVERAGE;

    }
   }
     printf("topper name %s:\n",s[max].name);
     printf("average is %f :",s[max].AVERAGE);
}
 
