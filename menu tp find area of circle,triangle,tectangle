#include <stdio.h>
#include <string.h>
int circle();
int rectangle(int);
int triangle(int,int,int);
int circle()
{
    float r;
    printf("enter radius of circle:");
    scanf("%f",&r);
    printf("area of the circle:%f",3.14*r*r);
}
int triangle(int a,int b,int c) 
{
    printf("the parameter is %d",a+b+c);
}
int rectangle(int length)
{
int breadth;
printf("enter the breadth:");
scanf("%d",&breadth);
printf("the area of triangle is %d",length*breadth);
}
void main()
{
    int a;
    printf("\n1.circle:");
    printf("\n2.triangle:");
    printf("\n3.rectangle:");
    printf("enter your choice:");
    scanf("%d",&a);
    switch(a)
    {
        case 1:circle();
               break; 
        case 2:rectangle(20);
               break;
        case 3:triangle(10,20,30);
               break;
        default:printf("invalid input.");       
    }
}    
